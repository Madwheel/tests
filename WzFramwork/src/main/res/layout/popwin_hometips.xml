<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/homtips_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="13dp"
        android:paddingTop="13dp">

        <RelativeLayout
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_hometips_pw_close"
                android:layout_width="34dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:paddingRight="13dp"
                android:src="@drawable/icon_pop_close" />

            <LinearLayout
                android:id="@+id/ll_hometips_pw_dec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_hometips_pw_title"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_hometips_pw_dec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_hometips_tv"
                    android:gravity="center_vertical"
                    android:paddingBottom="20dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="20dp"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_hometips_pw"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@+id/ll_hometips_pw_dec"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_hometips_pw_cancel"
                    android:layout_width="135dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/btn_bg_cancle"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_hometips_pw_confirm"
                    android:layout_width="135dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_bg_sure"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
